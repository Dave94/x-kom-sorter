{
    "name": "X-kom.pl Sorter",
    "version": "1.0",
    "description": "Additional sort orders for x-kom products",
    "manifest_version": 2,
    "permissions": [
        "<all_urls>",
        "activeTab"
    ],
    "browser_action": {
    "default_icon": "images/x-kom32.png"
    },
    "content_scripts": [
   {
     "matches": ["https://*.x-kom.pl/*"],
     "css": ["styles.css"],
   	 "js": ["contentScript.js"]
   }
 ],
    "icons": {
        "16": "images/x-kom16.png",
        "32": "images/x-kom32.png",
        "48": "images/x-kom48.png",
        "128": "images/x-kom128.png"
    }
}