{
    "name": "x-kom.pl sorter",
    "version": "1.0",
    "description": "Sorts x-kom products in additional orders",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "manifest_version": 2,
    "permissions": [
        "<all_urls>",
        "webRequest",
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "content_scripts": [
   {
     "matches": ["https://*.x-kom.pl/*"],
     "css": ["styles.css"],
   	 "js": ["contentScript.js"]
   }
 ],
    "icons": {
        "16": "images/x-kom16.png",
        "32": "images/x-kom32.png",
        "48": "images/x-kom48.png",
        "128": "images/x-kom128.png"
    }
}